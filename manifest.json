{
  "name": "Youtube HiQ",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Tries to set video quality high, and resize viewport to the video.",
  "permissions": [
    "http://*.youtube.com/*",
	"activeTab"
  ],
  "icons": { "16": "youtube-HiQ-logo.16px.png",
           "48": "youtube-HiQ-logo.48px.png",
          "128": "youtube-HiQ-logo.128px.png" },
  "content_scripts": [
    {
      "matches": ["http://*.youtube.com/*", "https://*.youtube.com/*"],
      "js": ["inject.js", "changeSize.js", "jquery-1.10.2.min.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [ "changeQuality.js"],
  "background": {
    "scripts": ["background.js"]
  }
}
